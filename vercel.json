{
    "version": 2,
    "builds": [
        {
            "src": "fronted/package.json",
            "use": "@vercel/static-build",
            "config": {
                "buildCommand": "cd fronted && npm install && npm run build",
                "distDir": "fronted/dist"
            }
        },
        {
            "src": "backend/server.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/socket.io/(.*)",
            "dest": "backend/server.js"
        },
        {
            "src": "/api/(.*)",
            "dest": "backend/server.js"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "fronted/dist/index.html"
        }
    ]
}
